                        <p>Plein de coussins biens moelleux!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('img/photoShoot/IMG_0804.jpg') }}" alt="Chicago">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('img/photoShoot/IMG_0726.jpg') }}" alt="New York">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#actu-carousel" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#actu-carousel" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>




        </div>

    </div>
    </section>


{% endblock %}
