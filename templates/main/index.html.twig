    <div id="spacing-div"></div>

    <section>
    <div>
        <h2 class="index">Mes dernières actualités</h2>

{#CAROUSEL#}

        <div id="actu-carousel" class="carousel slide" data-ride="carousel" data-interval="false">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#actu-carousel" data-slide-to="0" class="active"></li>
                <li data-target="#actu-carousel" data-slide-to="1"></li>
                <li data-target="#actu-carousel" data-slide-to="2"></li>
